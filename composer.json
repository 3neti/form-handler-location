{
    "name": "3neti/form-handler-location",
    "description": "Location capture handler for form flow system",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "3neti",
            "email": "info@3neti.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "3neti/form-flow": "^1.0",
        "spatie/laravel-data": "^4.0",
        "illuminate/support": "^11.0 || ^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.3",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.0",
        "inertiajs/inertia-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "LBHurtado\\FormHandlerLocation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LBHurtado\\FormHandlerLocation\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LBHurtado\\FormHandlerLocation\\LocationHandlerServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "pest",
        "post-install-cmd": [
            "@php -r \"file_exists('../../artisan') && system('cd ../.. && php artisan location-handler:install --no-interaction 2>/dev/null || true');\""
        ],
        "post-update-cmd": [
            "@php -r \"file_exists('../../artisan') && system('cd ../.. && php artisan location-handler:install --no-interaction 2>/dev/null || true');\""
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
